)
create table LOP(
	MaLop varchar(10) not null primary key,
	TenLop nvarchar(20),
	Phong nvarchar(20),
	SiSo int,
	MaGV varchar(10),
	constraint FK_L_GV foreign key(MaGV)
		references GV(MaGV)
)
