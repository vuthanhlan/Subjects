create trigger trg_updateLop
on SV
for update
as
 begin
	declare @truoc varchar(10),@sau varchar(10)
	select @truoc=MaLop from deleted
	select @sau=MaLop from inserted
	update LOP set SiSo=SiSo+1
				where MaLop=@sau
	update LOP set SiSo=SiSo-1
				where Malop=@truoc
 end

