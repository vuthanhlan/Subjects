	MaSV varchar(10) not null primary key,
	TenSV nvarchar(20),
	GioiTinh nvarchar(10),
	QueQuan nvarchar(30),
	MaLop varchar(10),
	constraint FK_SV_L foreign key(MaLop)
		references LOP(MaLop)
)

